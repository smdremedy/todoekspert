<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/TodoButtonStyle</item>
    </style>

    <!-- wÅ‚asny styl przycisku -->
    <style name="TodoButtonStyle" parent="android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">11dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/button_text_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
